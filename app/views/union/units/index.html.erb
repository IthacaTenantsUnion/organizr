<p id="notice"><%= notice %></p>

<h1>Units</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Landlord</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= link_to unit.address, [:union, unit] %></td>
        <td><%= unit.landlords.map(&:name).join(', ') %></td>
        <td><%= edit_link(edit_union_unit_path(unit)) if can? :edit, unit %></td>
        <td><%= destroy_link unit if can? :destroy, unit %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unit', new_union_unit_path %>
