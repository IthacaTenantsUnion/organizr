<%= render("shared/new_button", target: new_union_landlord_path) if can? :create, Landlord %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Overall Rating</th>
      <th>Repairs Rating</th>
      <th>Number of Reviews</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @landlords.each do |landlord| %>
      <tr>
        <td><%= link_to landlord.name, [:union, landlord] %></td>
        <td><%= rating_grade(landlord.ratings.overall_average) %></td>
        <td><%= rating_grade(landlord.ratings.repairs_average) %></td>
        <td><%= landlord.ratings.size %></td>
        <td><%= link_to 'Edit', edit_union_landlord_path(landlord) if can? :edit, landlord %></td>
        <td><%= link_to 'Destroy', [:union,landlord], method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, landlord %></td>
      </tr>
    <% end %>
  </tbody>
</table>