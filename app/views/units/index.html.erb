<p id="notice"><%= notice %></p>

<h1>Units</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Landlord</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= link_to unit.address, unit %></td>
        <td><%= unit.landlords.to_a.map(&:name).join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>