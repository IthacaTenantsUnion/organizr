<p>
  Number of Occupants: <%= @unit.number_of_occupants %>
</p>
<p>
  Building Type: <%= Unit.building_types[@unit.building_type] || "Unknown" %>
</p>


<div class="ui cards">
  <%= render partial: "ratings/rating_card", object: @unit.ratings, locals: { score: :overall_average } %>
  <%= render partial: "ratings/rating_card", object: @unit.ratings, locals: { score: :repairs_average } %>
</div>

<h3>Known Landlord(s)</h3>
<div>
  <%= render partial: "landlords/landlord_card", collection: @unit.landlords %>
</div>

<%= render partial: "ratings/review_table", object: @unit.ratings %>


<%= render "shared/back_button" %>
