<p id="notice"><%= notice %></p>

<h1>Landlords</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Overall</th>
      <th>Repairs</th>
      <th>Reviews</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @landlords.each do |landlord| %>
      <tr>
        <td><%= landlord.name %></td>
        <td><%= rating_icon(clamp_rating(landlord.ratings.overall_average)) %></td>
        <td><%= rating_icon(clamp_rating(landlord.ratings.repairs_average)) %></td>
        <td><%= landlord.ratings.size %></td>
        <td><%= link_to 'Show', landlord %></td>
      </tr>
    <% end %>
  </tbody>
</table>